<%= link_to("<<Back to index", {:action => 'index', :page_id => @page.id}, :class => 'back_link') %>

<div class="show">
	<span class="h1">Section Details</span>
	<table summary="Section detail view">
		<tr>
			<th>Page_id</th>
			<td><%= @section.page_id %></td>
		</tr>
		<tr>
			<th>Name</th>
			<td><%= @section.name %></td>
		</tr>
		<tr>
			<th>Position</th>
			<td><%= @section.position %></td>
		</tr>
		<tr>
			<th>Visible</th>
			<td><%= @section.visible ? 'True' : 'False' %></td>
		</tr>
		<tr>
			<th>Content_type</th>
			<td><%= @section.content_type %></td>
		</tr>
		<tr>
			<th>Content</th>
			<td><%= @section.content %></td>
		</tr>
		<tr>
			<th>Created</th>
			<td><%= @section.created_at %></td>
		</tr>
		<tr>
			<th>Updated</th>
			<td><%= @section.updated_at %></td>
		</tr>
	</table>
</div>
