<% @page_title = "Admin User List" %>

<%= link_to("<<Back to menu",{:controller => 'access', :action => 'index'}, :class => 'back_link') %>

<div class="index">
<span class="h1">Admin Users</span>

<%= link_to("Add new users",{:action => 'new'}, :class => 'actions' ) %>

<div><%= pluralize(@users.size,'admin user') %> found </div>

<table class="listing">
	<tr>
		<th>Name</th>
		<th>Username</th>
		<th>E-Mail</th>
		<th>Actions</th>
	</tr>

	<% @users.each do |user| %>
	<tr class="<%= cycle('odd', 'even') %>">
		<td><%= user.first_name %></td>
		<td><%= user.username %></td>
		<td><%= mail_to(user.email) %></td>
		<td class="action">
			<%= link_to("Edit", {:action => 'edit', :id => user.id }, :class => "action" ) %>
			<%= link_to("Delete", {:action => 'delete', :id => user.id }, :class => "action") %>
		</td>
	</tr>
	<% end %>
</table>
</div>